<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="AdminStyle.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Products</title>

</head>

<body>
    <style>
        .product-list {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
        
        .product {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            max-width: 600px;
        }
        
        .product-info {
            margin-bottom: 10px;
            text-align: center;
        }
        
        .product-details {
            display: flex;
            flex-direction: column;
            text-align: center;
        }
        
        .product-direction {
            display: flex;
            flex-direction: column;
            /* text-align: center; */
        }
        
        .product-details h4 {
            margin-bottom: 5px;
        }
        
        .product-description {
            margin-top: 10px;
            text-align: center;
        }
        
        .product-image {
            height: 5em;
        }
        
        .add-product {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            /* display: flex; */
            /* flex-direction: row; */
            /* justify-content: center;
            align-items: center; */
        }
        
        .button-center {
            display: flex;
            justify-content: center
        }
    </style>
    <div class="button-center">
        <input type="text" id="search-input" placeholder="Search by product name or category">
    </div>

    <div class="product-direction">
        <% if (Array.isArray(products) && products.length > 0) { %>
            <ul class="product-list">
                <% products.forEach(product => { %>
                    <li class="product">
                        <div class="product-info">
                            <h3>
                                <%= product.productName %> (
                                    <%= product.category %>)
                            </h3>
                        </div>
                        <div>
                            <img class="product-image" src="/uploads/<%= product.image %>" alt="Product Image">
                        </div>
                        <div class="product-description">
                            <p>
                                <%= product.description %>
                            </p>
                            <p>
                                <%= product.status %>
                            </p>
                        </div>
                        <div class="button-center">
                            <a href="/edit-product/<%= product._id %>">
                                <i class="fas fa-edit"></i>
                                <!-- Font Awesome edit icon -->
                            </a>
                            <a href="#" class="delete-product" style="margin-left: 5px;" data-product-id="<%= product._id %>">
                                <i class="fas fa-trash"></i>
                                <!-- Font Awesome trash icon -->
                            </a>
                        </div>
                    </li>
                    <% }); %>
            </ul>
            <% } else { %>
                <p class="mt-4">No products found.</p>
                <% } %>
                    <div class="button-center"><a class="add-product" href="/addproduct">Add Product</a></div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        // Function to handle delete product action
        function deleteProduct(productId) {
            axios.delete(`http://127.0.0.1:3004/product/deleteproduct/${productId}`, {
                    headers: {
                        Authorization: `Bearer ${localStorage.getItem('token')}`
                    }
                })
                .then(response => {
                    if (response.status == 200) {
                        alert('Product deleted successfully')
                    } else {
                        console.log('Could not delete');
                    }
                })
                .catch(error => {
                    // Handle the error, e.g., display error message
                    console.error('Error deleting product:', error);
                    // Do any additional error handling as needed
                });
        }

        // Add event listener to delete product icon click
        const deleteIcons = document.querySelectorAll('.delete-product');
        deleteIcons.forEach(deleteIcon => {
            deleteIcon.addEventListener('click', (event) => {
                event.preventDefault(); // Prevent the default link behavior
                const productId = deleteIcon.getAttribute('data-product-id');
                deleteProduct(productId);
            });
        });
        // Function to handle filtering products by name
        function filterProductsByNameOrCategory() {
            const searchInput = document.getElementById('search-input');
            const filterValue = searchInput.value.toLowerCase();
            const productItems = document.querySelectorAll('.product');

            productItems.forEach((productItem) => {
                const productName = productItem.querySelector('.product-info h3').textContent.toLowerCase();
                if (productName.includes(filterValue)) {
                    productItem.style.display = 'block';
                } else {
                    productItem.style.display = 'none';
                }
            });
        }

        // Add event listener to search input
        const searchInput = document.getElementById('search-input');
        searchInput.addEventListener('input', filterProductsByNameOrCategory);
    </script>

</body>

</html>